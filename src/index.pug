doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;700&family=Inter:wght@400;700&family=Lora:wght@400;700&display=swap" rel="stylesheet")
    link(rel="icon" type="image/png" href="images/favicon-32x32.png")
    title Dictionary App
  body
    .dictionary-container
      header.header 
        i.logo-icon
        .header__settings
          include pug/dropdown.pug
          span.header__settings-line
          include pug/switch.pug
      form#search-form
        include pug/search.pug

      .spinner-wrapper.d-none#spinner-wrapper
        p.sr-only Loading...
        .spinner

      .results#results(aria-live="polite" aria-atomic="true" aria-relevant="additions")

      include pug/results-templates.pug


